<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparentToolbarMain</item>
    </style>

    <style name="AppTheme.NoActionBar.Details" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/transparentToolbar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TransparentToolbar" parent="AppTheme.NoActionBar.Details">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>
